<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApp"
    xmlns:pages="clr-namespace:WeatherApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="WeatherApp">
    <TabBar>
        <Tab Title="Today" Icon="{StaticResource todayIcon}">
            <ShellContent   ContentTemplate="{DataTemplate pages:MainPage}"  Route="MainPage" />
        </Tab>
        <Tab Title="Weekly" Icon="{StaticResource weeklyIcon}">
            <ShellContent  ContentTemplate="{DataTemplate pages:WeeklyWeatherPage}"  Route="WeeklyWeatherPage" />
        </Tab>
    </TabBar>
    

</Shell>
