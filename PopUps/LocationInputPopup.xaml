<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WeatherApp.PopUps.LocationInputPopup" Color="Transparent">
    <Border Stroke="Black" HorizontalOptions="Center" StrokeThickness="1" Padding="40" Background="White" StrokeShape="RoundRectangle 20">
        <VerticalStackLayout>
            <Label Text="Enter your location: "/>
            <Entry Text="{Binding LocationStr}"/>
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button x:Name="save_BTN" Text="Save" Clicked="save_BTN_Clicked"/>
                <Button x:Name="cancel_BTN" Text="Back" Clicked="cancel_BTN_Clicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>